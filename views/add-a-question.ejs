<%- include('partials/profileheader') -%>

<main class="container p-5">
    <div class="row">
        <div class="col-lg-3"></div>   
        <div class="col-lg-6 ">
          <div class="card text-bg-light shadow">
            <div class="card-body">
              <div class="mt-5">
                <h2 class="text-center">Add a question</h2>
                <form action="/post/createPost" enctype="multipart/form-data" method="POST">
                  <div class="mb-3">
                      <label for="title" class="form-label">Question title:</label>
                      <input type="text" class="form-control" id="title" name="title">
                  </div>
                  <div class="mb-3">
                    <label for="description" class="form-label">go into detail about your question here</label>
                    <textarea class="form-control" id="description" name="description"></textarea>
                  </div>
                  <div class="mb-3">
                    <label for="imgUpload" class="form-label">Image, do not need one if you dont want to</label>
                    <input type="file" class="form-control" id="imageUpload" name="file">
                  </div>
                  <div class="mb-3">
                    <label for="" class="form-label">Tag</label>
                    <textarea class="form-control" id="tag" name="tag" rows="1"></textarea>
                  </div>
                  <button type="submit" class="btn btn-danger position-relative top-0" value="Upload">Submit</button> 
                  <!-- <hr> -->
                </form>
              </div>
            </div>
          </div>
        </div>
        <div class="col-lg-3"></div>   
    </div>
   
</main>
<div class="container">
   
</div>

